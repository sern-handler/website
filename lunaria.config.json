{
  "$schema": "./node_modules/@lunariajs/core/config.schema.json",
  "repository": {
    "name": "durocodes/sern-website"
  },
  "defaultLocale": {
    "label": "English",
    "lang": "en"
  },
  "locales": [
    {
      "label": "English",
      "lang": "en"
    },
    {
      "label": "Español",
      "lang": "es"
    },
    {
      "label": "Türkçe",
      "lang": "tr"
    }
  ],
  "files": [
    {
      "location": "src/content/**/*.mdx",
      "pattern": "@lang/@path",
      "type": "universal"
    }
  ]
}